{
    "version": "2.2.0",
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "declaration": false,
        "noImplicitAny": false,
        "typeRoots": [
            "./typings/"
        ],
        "types": [
            "ol"
        ]
    },
    "include": [
        "src/**/*.ts",
        "typings/*.d.ts"
    ],
    "exclude": [
        "app",
        "bin",
        "node_modules",
        "testdata",
        "var",
        "vendor",
        "web"
    ]
}
