{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "typeRoots": [
            "./typings/"
        ],
        "types": [
            "es6-shim",
            "openlayers"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "app",
        "bin",
        "node_modules",
        "testdata",
        "var",
        "vendor",
        "web"
    ]
}
