{% if name is not defined or label is not defined or p is not defined %}
    <div class="notify error">
        The options <strong>name, label</strong> and <strong>p</strong> are required!
    </div>
{% else %}
    {% set id = name|md_id %}
    {% set type = type is defined ? type : 'mandatory' %}
    {% set default = default is defined ? default : '' %}
    {% set class = class is defined ? class : '' %}
    {% set validatorSources = validatorSources is defined ? validatorSources : '' %}
    {% set value = array_get(p, name|md_array_path, default) %}
    {% set hasList = hasList is defined and hasList == 1 ? true : false %}
    {% set iconCount = hasList and is_granted('ROLE_SYSTEM_GEO_OFFICE') ? 'i3' : 'i2' %}
    {% set sort = sort is defined ? sort : null %}
    {% set direction = direction is defined ? direction : null %}

    {% if hasList %}
        {% set options = get_list_options(array_get(p, '_profile'), id, defaultList is defined ? defaultList : {}, sort, direction) %}
    {% elseif options is not defined or options is empty %}
        <div class="notify error">
            <strong>hasList</strong> or <strong>options</strong> for <strong><code>{{ name }}</code></strong> required!
        </div>
    {% endif %}

    <label for="{{ id|md_id }}" class="form-label">{{ label|trans }}:</label>
    <div class="form-field-wrapper {{ iconCount }} -js-validation-wrapper">
        <span class="form-icon-type icon-{{ type }} rs left -js-validation-icon" data-validation-icon="icon-{{ type }}"></span>
        <select name="{{ id }}" id="{{ id|md_id }}" class="select -js-user-input {{ class }}" data-validator-source="{{ validatorSources }}" {{ id|md_data_obj }}>
            {% for optionValue, optionLabel in options  %}
                <option value="{{ optionValue }}" {{ md_select(value, optionValue) }}>{{ optionLabel|trans }}</option>
            {% endfor %}
        </select>
        <span class="form-icon icon-question2 -js-show-help" {{ id|md_data_obj }}></span>
        {% if hasList and is_granted('ROLE_SYSTEM_GEO_OFFICE') %}
            <a href="{{ path('metador_admin_lists_edit', { 'profile': array_get(p, '_profile'), 'key': id }) }}" target="_blank" class="form-icon icon-cog"></a>
        {% endif %}
    </div>
{% endif %}
