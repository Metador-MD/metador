<h1>{% trans %}Qualität und Gültigkeit{% endtrans %}</h1>

{#
    LINEAGE
#}
{% set id = 'p[lineage]' %}
{% set val = p['lineage'] is defined ? p['lineage'] : '' %}
<div class="oneColBox">
    <label class="displayLeft" for="{{ id|md_id }}">
        <div class="icon mandatory icon-circle"></div>{{'Herkunft'|trans}}:
    </label>
    <div class="btn-group displayRight">
        <div class="single showHelp" {{ id|md_data_obj }}><div class="icon icon-question"></div></div>
    </div>
    <textarea name="{{ id }}" id="{{ id|md_id }}" class="oneCol0">{{ val }}</textarea>
    <div class="clear"></div>
</div>

{#
    RESOLUTION
#}
{% set id = 'p[resolution]' %}

<div class="twoColBox">
    <h2>{% trans %}Räumliche Auflösung{% endtrans %}</h2>
    <label>
        <div class="icon mandatory icon-circle"></div>({% trans %}mindestens eine Angabe verpflichtend{% endtrans %})
    </label>

    {% set id = 'p[resolutionDenominator]' %}
    {% set val = p['resolutionDenominator'] is defined ? p['resolutionDenominator'] : '' %}

    <div class="left">
        <label for="{{ id|md_id }}">
            <div class="icon conditional icon-circle"></div>{{'Äquivalenter Maßstab'|trans}}:
        </label>
        <input name="{{ id }}" id="{{ id|md_id }}" type="text" value="{{ val }}" class="twoCol1"/>
        <div class="btn-group">
            <div class="last showHelp" {{ id|md_data_obj }}><div class="icon icon-question"></div></div>
        </div>
    </div>

    {% set id = 'p[resolutionGround]' %}
    {% set val = p['resolutionGround'] is defined ? p['resolutionGround'] : '' %}

    <div class="right">
        <label for="{{ id|md_id }}">
            <div class="icon conditional icon-circle"></div>{{'Bodenauflösung'|trans}}:
        </label>
        <div class="fr">
            <div class="btn-group">
                <div class="last showHelp" {{ id|md_data_obj }}><div class="icon icon-question"></div></div>
            </div>
            <input name="{{ id }}" id="{{ id|md_id }}" type="text" value="{{ val }}" class="twoCol1"/>
        </div>
    </div>
    <div class="clear"></div>
</div>
