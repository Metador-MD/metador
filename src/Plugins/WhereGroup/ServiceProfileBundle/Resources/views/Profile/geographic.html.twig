{% set tabId = 'tab-geographic' %}

<div class="mdtab-content" data-mdtab-content="geographic">
    <h1 class="title">{% trans %}Geografischer Standort{% endtrans %}</h1>

    <div class="fieldset2 -js-multi-fieldset" data-count="{{ array_length(p, 'bbox') }}">
        <div class="head">
            <div class="left">{% trans %}Bounding Box{% endtrans %}</div>
            <div class="right">
                <span class="icon medium icon-plus -js-multi-fieldset-add"></span>
            </div>
        </div>
        <div class="rows -js-multi-fieldset-rows">
            <div class="row">
                <div class="row-content">
                    <div class="grid space responsive">
                        <div class="row r-4">
                            {% set name = 'p[bbox][0][wLongitude]' %}
                            <div class="col c-1-4 text-center form-label">
                                <span class="icon-question2 -js-show-help" {{ name|md_data_obj }}></span>
                                {% trans %}W Längengrad:{% endtrans %}
                            </div>
                            <div class="col c-1-4 text-center form-label">
                                {% trans %}S Breitengrad:{% endtrans %}
                            </div>
                            <div class="col c-1-4 text-center form-label">
                                {% trans %}E Längengrad:{% endtrans %}
                            </div>
                            <div class="col c-1-4 text-center form-label">
                                {% trans %}N Breitengrad:{% endtrans %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% for key in 0 .. array_length(p, 'bbox', [{}]) -1 %}
                <div class="row -js-multi-field-row {% if key == 0 %}-js-multi-fieldset-default-row{% endif %}">
                    <div class="row-content">
                        <div class="grid space responsive">
                            <div class="row r-4">
                                <div class="col c-1-4">
                                    {{ form_element.input({
                                        'name'            : 'p[bbox][' ~ key  ~ '][wLongitude]',
                                        'validatorSources': tabId,
                                        'showHelp'        : false,
                                        'p'               : p
                                    }) }}
                                </div>
                                <div class="col c-1-4">
                                    {{ form_element.input({
                                        'name'            : 'p[bbox][' ~ key  ~ '][sLatitude]',
                                        'validatorSources': tabId,
                                        'showHelp'        : false,
                                        'p'               : p
                                    }) }}
                                </div>
                                <div class="col c-1-4">
                                    {{ form_element.input({
                                        'name'            : 'p[bbox][' ~ key  ~ '][eLongitude]',
                                        'validatorSources': tabId,
                                        'showHelp'        : false,
                                        'p'               : p
                                    }) }}
                                </div>
                                <div class="col c-1-4">
                                    {{ form_element.input({
                                        'name'            : 'p[bbox][' ~ key  ~ '][nLatitude]',
                                        'validatorSources': tabId,
                                        'showHelp'        : false,
                                        'p'               : p
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-icon -js-multi-fieldset-icons">
                        {% if key > 0 %}
                            <span class="icon icon-bin2 -js-multi-fieldset-remove"></span>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
