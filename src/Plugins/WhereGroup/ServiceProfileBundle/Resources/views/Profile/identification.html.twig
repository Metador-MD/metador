{% set tabId = 'tab-identification' %}
<div class="mdtab-content" data-mdtab-content="identification">
    <h1 class="title">{% trans %}Identifizierung{% endtrans %}</h1>

    <div class="grid space grid-space responsive">
        <div class="row r-1">
            <div class="col c-1">
                {{ form_element.input({
                    'name'            : 'p[title]',
                    'label'           : 'Titel',
                    'validatorSources': tabId,
                    'p'               : p
                }) }}
            </div>
        </div>
        <div class="row r-1">
            <div class="col c-1">
                {{ form_element.input({
                    'name'            : 'p[alternateTitle]',
                    'label'           : 'Alternativtitel',
                    'type'            : 'optional',
                    'validatorSources': tabId,
                    'p'               : p
                }) }}
            </div>
        </div>
        <div class="row r-1">
            <div class="col c-1">
                {{ form_element.text({
                    'name'            : 'p[abstract]',
                    'label'           : 'Kurzbeschreibung',
                    'type'            : 'optional',
                    'validatorSources': tabId,
                    'p'               : p
                }) }}
            </div>
        </div>

        <h2 class="title">{% trans %}Bezeichner{% endtrans %}</h2>

        <div class="row r-2">
            <div class="col c-1-2">
                {{ form_element.input({
                    'name'            : 'p[identifierCode]',
                    'label'           : 'Code',
                    'validatorSources': tabId,
                    'p'               : p
                }) }}
            </div>
            <div class="col c-1-2">
                {{ form_element.input({
                    'name'            : 'p[identifierCodespace]',
                    'label'           : 'Namensraum',
                    'type'            : 'optional',
                    'validatorSources': tabId,
                    'p'               : p
                }) }}
            </div>
        </div>
    </div>

    <div class="fieldset2 -js-multi-fieldset" data-count="{{ array_length(p, 'onlineResource') }}">
        <div class="head">
            <div class="left">{% trans %}Ressourcenverweis{% endtrans %}</div>
            <div class="right">
                <span class="icon medium icon-plus -js-multi-fieldset-add"></span>
            </div>
        </div>
        <div class="rows -js-multi-fieldset-rows">
            <div class="row">
                <div class="row-content">
                    <div class="grid space responsive">
                        <div class="row r-1">
                            <div class="col c-1 form-label">
                                {% trans %}URL:{% endtrans %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% for row in array_get(p, 'onlineResource', [{}], true) if row is not empty %}
                <div class="row -js-multi-field-row {% if loop.index0 == 0 %}-js-multi-fieldset-default-row{% endif %}">
                    <div class="row-content">
                        <div class="grid space responsive">
                            <div class="row r-1">
                                <div class="col c-1">
                                    {{ form_element.input({
                                        'name'            : 'p[onlineResource][' ~ loop.index0  ~ ']',
                                        'validatorSources': tabId,
                                        'p'               : p
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-icon -js-multi-fieldset-icons">
                        {% if loop.index0 > 0 %}
                            <span class="icon icon-bin2 -js-multi-fieldset-remove"></span>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="fieldset2 -js-multi-fieldset" data-count="{{ array_length(p, 'referencesysteminfo') }}">
        <div class="head">
            <div class="left">{% trans %}Koordinatenreferenzsystem{% endtrans %}</div>
            <div class="right">
                <span class="icon medium icon-plus -js-multi-fieldset-add"></span>
            </div>
        </div>
        <div class="rows -js-multi-fieldset-rows">
            <div class="row">
                <div class="row-content">
                    <div class="grid space responsive">
                        <div class="row r-3">
                            <div class="col c-1-3 text-center form-label">
                                {% trans %}Referenzsystem-Code:{% endtrans %}
                            </div>
                            <div class="col c-1-3 text-center form-label">
                                {% trans %}Codespace:{% endtrans %}
                            </div>
                            <div class="col c-1-3 text-center form-label">
                                {% trans %}Version:{% endtrans %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% for row in array_get(p, 'referencesysteminfo', [{}], true) %}
            <div class="row -js-multi-field-row {% if loop.index0 == 0 %}-js-multi-fieldset-default-row{% endif %}">
                <div class="row-content">
                    <div class="grid space responsive">
                        <div class="row r-3">
                            <div class="col c-1-3">
                                {{ form_element.input({
                                    'name'            : 'p[referencesysteminfo][' ~ loop.index0  ~ '][code]',
                                    'validatorSources': tabId,
                                    'p'               : p
                                }) }}
                            </div>
                            <div class="col c-1-3">
                                {{ form_element.input({
                                    'name'            : 'p[referencesysteminfo][' ~ loop.index0  ~ '][codespace]',
                                    'validatorSources': tabId,
                                    'p'               : p
                                }) }}
                            </div>
                            <div class="col c-1-3">
                                {{ form_element.input({
                                    'name'            : 'p[referencesysteminfo][' ~ loop.index0  ~ '][version]',
                                    'validatorSources': tabId,
                                    'p'               : p
                                }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-icon -js-multi-fieldset-icons">
                    {% if loop.index0 > 0 %}
                        <span class="icon icon-bin2 -js-multi-fieldset-remove"></span>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
