{% extends 'MetadorThemeBundle:Theme:template.html.twig' %}

{% block center %}
<div class="center">
    <div class="center-right">
        <div class="content">
            <div class="grid content-title">
                <div class="row r-2">
                    <div class="col c-1-2">
                        <h1 class="title dm">{% trans %}Datensatz löschen{% endtrans %}</h1>
                    </div>
                    <div class="col c-1-2 text-right">
                        <a href="{{ path('metador_admin_source') }}" class="btn medium">
                            <span class="icon-sign-out"></span> {% trans %}Übersicht{% endtrans %}
                        </a>
                    </div>
                </div>
            </div>

            <hr class="line-separator" />

            {{ form_start(form, { 'action': path('metadata_delete', { id: form.vars.value.id }), 'method': 'POST', 'attr': {
                novalidate: 'novalidate', autocomplete: 'off'
            }}) }}

            <div class="grid space row-space responsive notify error remove-last-space">
                <div class="row r-1">
                    <div class="col c-1 text-center">
                        Sind Sie sicher das sie <strong>{{ form.vars.value.title }}</strong> löschen möchten?
                    </div>
                </div>
                <div class="row r-1">
                    <div class="col c-1 text-right">
                        {{ form_widget(form.delete, { 'attr': {'class': 'btn error'}}) }}
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
