{% set tabId = 'tab-classification' %}
<div class="mdtab-content" data-mdtab-content="classification">
    <h1 class="title">{% trans %}Klassifizierung{% endtrans %}</h1>

    <div class="grid space responsive">
        <div class="row r-2">
            <div class="col c-2-3">
                {% set value = p['serviceType'] is defined ? p['serviceType'] : '' %}
                {{ profileForm.select('p[serviceType]', value, 'Geodatendienst', {
                    '': '',
                    'view': 'Darstellungsdienste',
                    'invoke': 'Dienste zum Abrufen von Geodatendiensten',
                    'download': 'Download-Dienste',
                    'other': 'Sonstige Dienste',
                    'discovery': 'Suchdienste',
                    'transformation': 'Transformationsdienste'
                }, 'mandatory', '', tabId) }}
            </div>
            <div class="col c-1-3">
                {% set value = p['serviceTypeVersion'] is defined ? p['serviceTypeVersion'] : '' %}
                {{ profileForm.input('p[serviceTypeVersion]', value, '1.1.1', 'Version', 'mandatory', '', tabId) }}
            </div>
        </div>

        <div class="row r-1">
            <div class="col c-1">
                <h2 class="title">{% trans %}Dienste Operationen{% endtrans %}</h2>
            </div>
        </div>

        <div class="row r-2">
            <div class="col c-1-2">
                {% set value = p['containsOperationsName'] is defined ? p['containsOperationsName'] : '' %}
                {{ profileForm.input('p[containsOperationsName]', value, 'GetCapabilities', 'Operation', 'mandatory', '', tabId) }}
            </div>
            <div class="col c-1-2">
                {% set value = p['containsOperationsDCP'] is defined ? p['containsOperationsDCP'] : '' %}
                {{ profileForm.input('p[containsOperationsDCP]', value, 'WebService', 'Platform', 'mandatory', '', tabId) }}
            </div>
        </div>

        <div class="row r-1">
            <div class="col c-1">
                {% set value = p['containsOperationsURL'] is defined ? p['containsOperationsURL'] : '' %}
                {{ profileForm.input('p[containsOperationsURL]', value, '', 'URL', 'mandatory', '', tabId) }}
            </div>
        </div>
    </div>
</div>
