{% extends 'MetadorThemeBundle:Admin:template.html.twig' %}

{% block content %}
    <h1 class="title">{% trans %}Einstellungen{% endtrans %}</h1>
    <hr class="line-separator">
    {% if pluginConfiguration is defined and pluginConfiguration is not empty %}
        <form action="{{ path('metador_admin_settings_update') }}" method="post" autocomplete="off">
            {% for pluginKey, pluginData in pluginConfiguration %}
                <h2 class="title text-right">{{ pluginData['name'] }}</h2>

                <div class="grid space responsive">
                {% for configKey, config in pluginData['settings'] %}
                    {% set placeholder = config['placeholder'] is defined ? config['placeholder'] : '' %}
                    {% set id =  pluginKey ~ '-conf-' ~ configKey %}
                    {% set name = pluginKey ~ '[' ~ configKey ~ ']' %}
                    {% set default = config['default'] is defined ? config['default'] : '' %}
                    {% set value = config['value'] is defined and config['value'] is not empty ? config['value'] : default %}
                    {% set description = config['description'] is defined ? config['description'] : '' %}

                    <div class="row r-1">
                        <div class="col c-1">
                            <div>
                                <label class="form-label" for="{{ id }}">{{ config['label'] }}:</label>
                            </div>
                            <div class="form-field-wrapper i1">
                                {% if config['type'] == 'choice' %}
                                    <select class="select" id="{{ id }}" type="text" name="{{ name }}">
                                        <option value=""></option>
                                        {% for option in config['options'] %}
                                            <option value="{{ option }}"{% if value == option %}selected="selected"{% endif %}>{{ option }}</option>
                                        {% endfor %}
                                    </select>
                                {% elseif config['type'] == 'text' %}
                                    <textarea class="textarea" id="{{ id }}" type="text" name="{{ name }}" placeholder="{{ placeholder }}">{{ value }}</textarea>
                                {% else %}
                                    <input class="input" id="{{ id }}" type="text" name="{{ name }}" value="{{ value }}" placeholder="{{ placeholder }}">
                                {% endif %}
                                <span class="form-icon icon-question2 ls right" title="{{ description }}"></span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            {% endfor %}

            <div class="grid space">
                <div class="col c-1 text-right">
                    <button type="submit" class="btn info">{% trans %}Speichern{% endtrans %}</button>
                </div>
            </div>
        </form>
    {% endif %}
{% endblock %}
