{% extends 'MetadorThemeBundle:Admin:template.html.twig' %}

{% block title %}Seite bearbeiten{% endblock %}

{% block content %}
    <div class="grid content-title">
        <div class="row r-2">
            <div class="col c-1-2">
                <h1 class="title dm">Seite bearbeiten</h1>
            </div>
            <div class="col c-1-2 text-right">
                <a href="{{ path('metador_admin_page') }}" class="btn medium">
                    <span class="icon-sign-out"></span> {% trans %}Übersicht{% endtrans %}
                </a>
            </div>
        </div>
    </div>

    <hr class="line-separator" />

    {{ form_start(form, { 'action': path('metador_admin_page_edit', { slug: form.vars.value.slug }), 'method': 'POST', 'attr': {
        novalidate: 'novalidate', autocomplete: 'off'
    }}) }}

    {% if not form.vars.valid %}
        <div class="notify error">
            {{ form_errors(form) }}
            {{ form_errors(form.slug) }}
            {{ form_errors(form.markdown) }}
        </div>
    {% endif %}

    <div class="grid space responsive">
        <div class="row r-1">
            <div class="col c-1">
                <div>{{ form_label(form.slug, null, { 'label_attr': {'class': 'form-label'}}) }}</div>
                <div class="form-field-wrapper">
                    {{ form_widget(form.slug, { 'attr': {'class': 'input'}}) }}
                </div>
            </div>
        </div>
        <div class="row r-1 margin-b">
            <div class="col c-1">
                <div>{{ form_label(form.markdown, null, { 'label_attr': {'class': 'form-label'}}) }}</div>
                <div class="form-field-wrapper">
                    {{ form_widget(form.markdown, { 'attr': {'class': 'textarea'}}) }}
                </div>
            </div>
        </div>
        <div class="row r-1">
            <div class="col c-1 text-right">
                <button class="btn success medium">
                    <span class="icon-checkmark"></span> {% trans %}speichern{% endtrans %}
                </button>
                <a href="{{ path('metador_admin_page_delete', { slug: form.vars.value.slug }) }}" class="btn error medium">
                    <span class="icon-bin2"></span> {% trans %}löschen{% endtrans %}
                </a>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
