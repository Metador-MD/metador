{% extends 'MetadorThemeBundle:Admin:template.html.twig' %}

{% block content %}
    {% if log.warning is defined and log.warning is not empty %}
        <div class="notify close warning">
            <ul>
                {% for log in log.warning %}
                    <li>({{ log.origin }}) {{ log.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {% if log.error is defined and log.error is not empty %}
        <div class="notify close error">
            <ul>
                {% for log in log.error %}
                    <li>({{ log.origin }}) {{ log.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="grid space row-space padding responsive">
        {% for item in applicationGet('app-information') %}
            {% if loop.index0 % 3 == 0 %}
                <div class="row r-3">
            {% endif %}
                <div class="col c-1-3">
                    <div class="app-info">
                        <div class="app-info-head"><span class="{{ item.icon }}"></span> {{ item.label|trans }}</div>
                        <div class="app-info-count">{% if item.count is defined %}{{ item.count }}{% endif %}</div>
                        <div class="app-info-content">{% if item.content is defined %}{{ item.content|raw }}{% endif %}</div>
                    </div>
                </div>
            {% if loop.index % 3 == 0 %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
