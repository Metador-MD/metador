<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- SERVICE -->
        <parameter key="wheregroup.metador.locale.class">WhereGroup\Plugin\InternationalizationBundle\Component\Locale</parameter>

        <!-- EVENTLISTENER -->
        <parameter key="wheregroup.internationalization.app.listener.class">WhereGroup\Plugin\InternationalizationBundle\EventListener\ApplicationMenuListener</parameter>
    </parameters>

    <services>
        <!-- SERVICE -->
        <service id="metador_locale" class="%wheregroup.metador.locale.class%">
            <argument type="service" id="kernel" />
            <argument type="service" id="metador_plugin" />
            <argument>%i18n_locales%</argument>
            <argument>%i18n_bundles%</argument>
            <argument>%i18n_import%</argument>
        </service>

        <!-- EVENTLISTENER -->
        <service id="wheregroup_internationalization_app_listener" class="%wheregroup.internationalization.app.listener.class%">
            <tag name="kernel.event_listener" event="application.loading" method="onLoading"/>
            <argument type="service" id="kernel" />
            <argument type="service" id="request_stack" />
        </service>

        <service id="wheregroup_internationalization_locale_listener" class="WhereGroup\Plugin\InternationalizationBundle\EventListener\LocaleListener">
            <argument>%kernel.default_locale%</argument>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
