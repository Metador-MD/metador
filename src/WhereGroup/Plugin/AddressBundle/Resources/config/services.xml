<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- SERVICE -->
        <parameter key="metador.address.class">WhereGroup\Plugin\AddressBundle\Component\Address</parameter>

        <!-- EVENT LISTENER -->
        <parameter key="metador.address.app.listener.class">WhereGroup\Plugin\AddressBundle\EventListener\ApplicationListener</parameter>
        <parameter key="metador.address.metadata.listener.class">WhereGroup\Plugin\AddressBundle\EventListener\MetadataListener</parameter>
    </parameters>

    <services>
        <!-- SERVICE -->
        <service id="metador_address" class="%metador.address.class%">
            <argument type="service" id="service_container" />
        </service>

        <!-- EVENT LISTENER -->
        <service id="metador_address_app_listener" class="%metador.address.app.listener.class%">
            <tag name="kernel.event_listener" event="application.loading" method="onLoading"/>
            <argument type="service" id="metador_address" />
        </service>
        <service id="metador_address_metadata_listener" class="%metador.address.metadata.listener.class%">
            <tag name="kernel.event_listener" event="metador.post_save" method="onPostSave" />
            <argument type="service" id="metador_address" />
        </service>
    </services>
</container>
