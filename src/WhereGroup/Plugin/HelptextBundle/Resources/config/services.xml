<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- EVENT LISTENER -->
        <parameter key="metador.helptext.app.listener.class">WhereGroup\Plugin\HelptextBundle\EventListener\ApplicationMenuListener</parameter>
    </parameters>

    <services>
        <!-- EVENT LISTENER -->
        <service id="metador_helptext_app_listener" class="%metador.helptext.app.listener.class%">
            <tag name="kernel.event_listener" event="application.loading" method="onLoading"/>
        </service>
    </services>
</container>
