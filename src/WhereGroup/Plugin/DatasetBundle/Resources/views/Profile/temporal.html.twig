<h1>Zeitbezug</h1>

<div class="threeColBox">
    <label class="displayLeft">
        <div class="icon mandatory icon-circle icon-circle"></div>{{'Mindestens eine Angabe verpflichtend.'|trans}}
    </label>
    <div class="clear"></div>

    {% set id = 'p[creationDate]' %}
    {% set val = p['creationDate'] is defined ? p['creationDate'] : '' %}

    <div class="left">
        <label>
            <div class="icon conditional icon-circle"></div>{{'Erstellungsdatum'|trans}}:
        </label>
        <input name="{{ id }}" {{ id|md_id }} type="text" value="{{ val }}" class="threeCol1 datepicker"/>
        <div class="btn-group">
            <div class="last showHelp" {{ id|md_data_obj }}>
                <div class="icon icon-question"></div>
            </div>
        </div>
    </div>

    {% set id = 'p[publicationDate]' %}
    {% set val = p['publicationDate'] is defined ? p['publicationDate'] : '' %}

    <div class="center">
        <label>
            <div class="icon conditional icon-circle"></div>{{'Veröffentlichung'|trans}}:
        </label>
        <input name="{{ id }}" {{ id|md_id }} type="text" value="{{ val }}" class="threeCol1 datepicker"/>
        <div class="btn-group">
            <div class="last showHelp" {{ id|md_data_obj }}>
                <div class="icon icon-question"></div>
            </div>
        </div>
    </div>

    {% set id = 'p[revisionDate]' %}
    {% set val = p['revisionDate'] is defined ? p['revisionDate'] : '' %}

    <div class="right">
        <label>
            <div class="icon conditional icon-circle"></div>{{'Überarbeitung'|trans}}:
        </label>
        <div class="fr">
            <div class="btn-group" style="float:right;">
                <div class="last showHelp" {{ id|md_data_obj }}>
                    <div class="icon icon-question"></div>
                </div>
            </div>
            <input name="{{ id }}" {{ id|md_id }} type="text" value="{{ val }}" class="threeCol1 datepicker"/>
        </div>
    </div>
    <div class="clear"></div>
</div>
