{% if p['temporalExtent'] is not defined %}
    {% set p = p|merge({'temporalExtent': [{'begin':'','end':''}]}) %}
{% endif %}

{% set id = 'p[temporalExtent]' %}
{% set length = p['temporalExtent']|length -1 %}

<h2>Zeitliche Ausdehnung</h2>
<div class="duplicatable" data-count="{{ length }}">
    <ul>
        {% for key,value in p['temporalExtent'] %}
        <li data-id="{{ key }}" class="tab {% if key == 0 %}act{% endif %}">{{ key }}</li>
        {% endfor %}
        <li class="duplicate"><div class="icon icon-plus"></div></li>
        <li class="menu delete"><div class="icon icon-bin2"></div></li>
        <li class="menu showHelp" {{ id|md_data_obj }}><div class="icon icon-question"></div></li>
    </ul>
    <div class="content">
        {% for key,value in p['temporalExtent'] %}

        <div class="nr{{ key }} {% if key == 0 %}act{% endif %}">
            <div class="twoColBox">

                {% set id = 'p[temporalExtent][' ~ key ~ '][begin]' %}
                {% set val = value['begin'] %}

                <div class="left">
                    <label>
                        <div class="icon optional icon-circle"></div>{{'Anfangsdatum'|trans}}:
                    </label>
                    <input name="{{ id }}" {{ id|md_id }} type="text" value="{{ val }}" class="twoCol1 datepicker"/>
                    <div class="btn-group">
                        <div class="last showHelp" {{ id|md_data_obj }}>
                            <div class="icon icon-question"></div>
                        </div>
                    </div>
                </div>

                {% set id = 'p[temporalExtent][' ~ key ~ '][end]' %}
                {% set val = value['end'] %}

                <div class="right">
                    <label>
                        <div class="icon optional icon-circle"></div>{{'Enddatum'|trans}}:
                    </label>
                    <div class="fr">
                        <div class="btn-group">
                            <div class="last showHelp" {{ id|md_data_obj }}>
                                <div class="icon icon-question"></div>
                            </div>
                        </div>
                        <input name="{{ id }}" {{ id|md_id }} type="text" value="{{ val }}" class="twoCol1 datepicker"/>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

