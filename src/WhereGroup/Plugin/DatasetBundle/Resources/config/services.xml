<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <!-- EVENT LISTENER -->
        <parameter key="metador.profile.dataset.metadata.listener.class">WhereGroup\Plugin\DatasetBundle\EventListener\MetadorListener</parameter>
        <parameter key="metador.profile.dataset.menu.listener.class">WhereGroup\Plugin\DatasetBundle\EventListener\ApplicationMenuListener</parameter>
    </parameters>
    <services>
        <!-- EVENT LISTENER -->
        <service id="metador.profile.dataset.metadata.listener" class="%metador.profile.dataset.metadata.listener.class%">
            <tag name="kernel.event_listener" event="metador.pre_save" method="onPreSave" />
            <argument type="service" id="service_container" />
        </service>
        <service id="metador.profile.dataset.menu.listener" class="%metador.profile.dataset.menu.listener.class%">
            <tag name="kernel.event_listener" event="application.loading" method="onLoading"/>
            <argument type="service" id="metadata" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
