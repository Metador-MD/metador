{% extends 'MetadorThemeBundle:Theme:base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('public/app.min.css') }}">

    {% if app.environment == 'dev' %}
        <link rel="stylesheet" href="https://i.icomoon.io/public/83c52ab735/Metador/style.css">
    {% else %}
        <link rel="stylesheet" href="{{ asset('bundles/metadortheme/style.css') }}">
    {% endif %}

    <link rel="stylesheet" href="{{ asset('bundles/metadortheme/css/theme-v2.css') }}">
{% endblock %}

{% block javascript %}
    <script src="{{ asset('public/app.min.js') }}"></script>
    <script src="{{ asset('public/javascript/zebra_datepicker.js') }}"></script>
    <script src="{{ asset('bundles/metadortheme/ui.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="md">
        <div class="top">
            <div class="top-left">
            <span class="logo">
                <img src="{{ asset('bundles/metadortheme/img/logo-s.png') }}" />
            </span>
            </div>
            <div class="top-right">
                <div class="top-right-item">
                    <span class="icon-cog"></span> Administration
                </div>

                <div class="user -js-user">
                    <div class="-js-toggle-user-menu user-btn">
                        <div class="user-image">
                            <span class="icon-user user-image"></span>
                        </div>
                        <div class="user-name">
                            {{ app.user.username }} <span class="icon-sort-desc"></span>
                        </div>
                    </div>
                    <div class="user-menu">
                        <div class="grid space">
                            <div class="row r-2">
                                <div class="col c-1-3">Username</div>
                                <div class="col c-2-3 form-field-wrapper medium">
                                    <input type="text" class="input" />
                                </div>
                            </div>
                            <div class="row r-2">
                                <div class="col c-1-3">Password</div>
                                <div class="col c-2-3 form-field-wrapper medium">
                                    <input type="password" class="input" />
                                </div>
                            </div>
                            <div class="row r-1">
                                <div class="col c-1">
                                    <button class="btn medium info full">login</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="center menu">
            <div class="center-left">
                <ul class="left-menu">
                    <li>Metadatensatz</li>
                    <li>Indentifikation</li>
                    <li>Klassifizierung</li>
                    <li>Schlüsselwort</li>
                    <li class="act">Geografischer Standort</li>
                    <li>Zeitbezug</li>
                    <li>Qualität</li>
                    <li>Übereinstimmung</li>
                    <li>Beschränkungen</li>
                    <li>Zuständige Stelle</li>
                </ul>
            </div>
            <div class="center-right">
                <div class="content">

                    {# Form #}
                    <h1 class="title">Form</h1>

                    <form class="metadata-form">
                        <div class="grid space responsive">

                            <h2 class="title">Input</h2>

                            <div class="row r-3">
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="input-1">Input 1:</label>
                                    </div>
                                    <div class="form-field-wrapper">
                                        <input class="input" id="input-1" type="text" name="" value="" placeholder="..." />
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="input-2">Input 2:</label>
                                    </div>
                                    <div class="form-field-wrapper i2">
                                        <span class="form-icon-type icon-user rs left"></span>
                                        <input class="input" id="input-2" type="text" name="" value="" placeholder="..." />
                                        <span class="form-icon icon-question2 ls right"></span>
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="input-3">Input 3:</label>
                                    </div>
                                    <div class="form-field-wrapper i3">
                                        <span class="form-icon-type icon-optional rs left"></span>
                                        <input class="input" id="input-3" type="text" name="" value="" placeholder="..." />
                                        <span class="form-icon icon-question2 right"></span>
                                        <span class="form-icon icon-download ls right"></span>
                                    </div>
                                </div>
                            </div>

                            <h2 class="title">Select</h2>

                            <div class="row r-3">
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="select-1">Select 1:</label>
                                    </div>
                                    <div class="form-field-wrapper">
                                        <select class="select" name="select" id="select-1">
                                            <option value="">...</option>
                                            <option value="1">test</option>
                                            <option value="2">pest</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="select-2">Select 2:</label>
                                    </div>
                                    <div class="form-field-wrapper i2">
                                        <span class="form-icon-type icon-user rs left"></span>
                                        <select class="select" name="select" id="select-2">
                                            <option value="">...</option>
                                            <option value="1">test</option>
                                            <option value="2">pest</option>
                                        </select>
                                        <span class="form-icon icon-question2 ls right"></span>
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="select-3">Select 3:</label>
                                    </div>
                                    <div class="form-field-wrapper i3">
                                        <span class="form-icon-type icon-conditional rs left"></span>
                                        <select class="select" name="select" id="select-3">
                                            <option value="">...</option>
                                            <option value="1">test</option>
                                            <option value="2">pest</option>
                                        </select>
                                        <span class="form-icon icon-question2 right"></span>
                                        <span class="form-icon icon-download ls right"></span>
                                    </div>
                                </div>
                            </div>

                            <h2 class="title">Textarea</h2>

                            <div class="row r-3">
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="textarea-1">Textarea 1:</label>
                                    </div>
                                    <div class="form-field-wrapper">
                                        <textarea class="textarea" name="textarea" id="textarea-1" placeholder="..."></textarea>
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="textarea-2">Textarea 2:</label>
                                    </div>
                                    <div class="form-field-wrapper i2">
                                        <span class="form-icon-type icon-user left"></span>
                                        <textarea class="textarea" name="textarea" id="textarea-2" placeholder="..."></textarea>
                                        <span class="form-icon icon-question2 right"></span>
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="textarea-3">Textarea 3:</label>
                                    </div>
                                    <div class="form-field-wrapper i2">
                                        <span class="form-icon-type icon-mandatory left"></span>
                                        <textarea class="textarea" name="textarea" id="textarea-3" placeholder="..."></textarea>
                                        <div class="icon-group">
                                            <span class="form-icon icon-question2 right"></span>
                                            <span class="form-icon icon-download right"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <h2 class="title">Validation Error</h2>

                            <div class="row r-3">
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="abc">Datum:</label>
                                    </div>
                                    <div class="form-field-wrapper error i3">
                                        <span class="form-icon-type icon-exclamation left"></span>
                                        <input class="input" type="text" name="" value="" placeholder="..." />
                                        <span class="form-icon icon-question2 right"></span>
                                        <span class="form-icon icon-download right"></span>
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="select-1">Datum:</label>
                                    </div>
                                    <div class="form-field-wrapper error i3">
                                        <span class="form-icon-type rs icon-exclamation left"></span>
                                        <select class="select" name="select" id="select-1">
                                            <option value="">...</option>
                                            <option value="1">test</option>
                                            <option value="2">pest</option>
                                        </select>
                                        <span class="form-icon icon-question2 right"></span>
                                        <span class="form-icon ls icon-download right"></span>
                                    </div>
                                </div>
                                <div class="col c-1-3">
                                    <div>
                                        <label class="form-label" for="textarea-1">Datum:</label>
                                    </div>
                                    <div class="form-field-wrapper error i2">
                                        <span class="form-icon-type icon-exclamation left"></span>
                                        <textarea class="textarea" name="textarea" id="textarea-1" placeholder="..."></textarea>
                                        <div class="icon-group">
                                            <span class="form-icon icon-question2 right"></span>
                                            <span class="form-icon icon-download right"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <h2 class="title">Sizes</h2>

                            <div class="row r-4">
                                <div class="col c-1-4">
                                    <div class="form-field-wrapper small">
                                        <input class="input" type="text" name="" value="" placeholder="Small" />
                                    </div>
                                </div>
                                <div class="col c-1-4">
                                    <div class="form-field-wrapper medium">
                                        <input class="input" type="text" name="" value="" placeholder="Medium" />
                                    </div>
                                </div>
                                <div class="col c-1-4">
                                    <div class="form-field-wrapper">
                                        <input class="input" type="text" name="" value="" placeholder="Normal" />
                                    </div>
                                </div>
                                <div class="col c-1-4">
                                    <div class="form-field-wrapper large">
                                        <input class="input" type="text" name="" value="" placeholder="Large" />
                                    </div>
                                </div>
                            </div>


                            <h2 class="title">Checkbox</h2>

                            <div class="row r-4">
                                <div class="col c-1-4">
                                    <div class="form-wrapper small">
                                        <input class="check" type="checkbox" id="checkbox-1" name="" /> <label class="form-label" for="checkbox-1">Small</label>
                                    </div>
                                </div>
                                <div class="col c-1-4">
                                    <div class="form-wrapper medium">
                                        <input class="check" type="checkbox" id="checkbox-2" name="" /> <label class="form-label" for="checkbox-2">Medium</label>
                                    </div>
                                </div>
                                <div class="col c-1-4">
                                    <div class="form-wrapper">
                                        <input class="check" type="checkbox" id="checkbox-3" name="" /> <label class="form-label" for="checkbox-3">Normal</label>
                                    </div>
                                </div>
                                <div class="col c-1-4">
                                    <div class="form-wrapper large">
                                        <input class="check" type="checkbox" id="checkbox-4" name="" /> <label class="form-label" for="checkbox-4">Large</label>
                                    </div>
                                </div>
                            </div>

                            <h1 class="title">Button</h1>

                            <div class="row r-4">
                                <div class="col c-1-4">
                                    <button class="btn small">
                                        <span class="icon-checkmark"></span>
                                        Small normal
                                    </button>
                                </div>
                                <div class="col c-1-4">
                                    <button class="btn info medium">
                                        <span class="icon-download"></span>
                                        Medium info
                                    </button>
                                </div>
                                <div class="col c-1-4">
                                    <button class="btn success">
                                        <span class="icon-upload"></span>
                                        Normal success
                                    </button>
                                </div>
                                <div class="col c-1-4">
                                    <button class="btn warning large">
                                        <span class="icon-spinner"></span>
                                        Large warning
                                    </button>
                                </div>
                            </div>

                            <div class="row r-1">
                                <div class="col c-1">
                                    <button class="btn info full">Full info</button>
                                </div>
                            </div>

                            <h1 class="title">Separators</h1>

                            <hr class="line-separator">

                        </div>
                    </form>

                    <h1 class="title">Notify</h1>

                    <div class="notify"><div class="close icon-cross"></div>...</div>
                    <div class="notify info"><div class="close icon-cross"></div>...</div>
                    <div class="notify success"><div class="close icon-cross"></div>...</div>
                    <div class="notify warning"><div class="close icon-cross"></div>...</div>
                    <div class="notify error"><div class="close icon-cross"></div>...</div>

                    <h1 class="title">Grid-System</h1>

                    <div class="grid space padding base-style">
                        <div class="row r-1">
                            <div class="col c-1">c-1</div>
                        </div>
                        <div class="row r-2">
                            <div class="col c-1-2">c-1-2</div>
                            <div class="col c-1-2">c-1-2</div>
                        </div>
                        <div class="row r-3">
                            <div class="col c-1-3">c-1-3</div>
                            <div class="col c-1-3">c-1-3</div>
                            <div class="col c-1-3">c-1-3</div>
                        </div>
                        <div class="row r-4">
                            <div class="col c-1-4">c-1-4</div>
                            <div class="col c-1-4">c-1-4</div>
                            <div class="col c-1-4">c-1-4</div>
                            <div class="col c-1-4">c-1-4</div>
                        </div>
                        <div class="row r-2">
                            <div class="col c-1-3">c-1-3</div>
                            <div class="col c-2-3">c-2-3</div>
                        </div>
                        <div class="row r-2">
                            <div class="col c-2-3">c-2-3</div>
                            <div class="col c-1-3">c-1-3</div>
                        </div>
                        <div class="row r-2">
                            <div class="col c-1-4">c-1-4</div>
                            <div class="col c-3-4">c-3-4</div>
                        </div>
                        <div class="row r-2">
                            <div class="col c-3-4">c-3-4</div>
                            <div class="col c-1-4">c-1-4</div>
                        </div>
                        <div class="row r-3">
                            <div class="col c-1-4">c-1-4</div>
                            <div class="col c-1-2">c-3-4</div>
                            <div class="col c-1-4">c-1-4</div>
                        </div>
                        <div class="row r-3">
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-3-4">c-3-4</div>
                            <div class="col c-1-8">c-1-8</div>
                        </div>
                        <div class="row r-8">
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-1-8">c-1-8</div>
                            <div class="col c-1-8">c-1-8</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
